{
    "manifest_version": 3,
    "name": "Tabs Sort Manager",
    "version": "0.1.0",
    "description": "Side panel vertical tabs with domain sort, drag reorder, groups, and search.",
    "permissions": ["sidePanel", "tabs", "tabGroups", "storage"],
    "background": { "service_worker": "sw.js", "type": "module" },
    "side_panel": { "default_path": "sidepanel.html" },
    "action": { "default_title": "Tabs" }
  }
  