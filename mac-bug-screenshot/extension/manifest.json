{
  "manifest_version": 3,
  "name": "Mac Bug Screenshot",
  "version": "1.0.0",
  "description": "Native-mode desktop screenshot tool.",
  "action": {
    "default_title": "Mac Bug Screenshot",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "nativeMessaging",
    "tabs"
  ],
  "icons": {
    "16": "../images/favicon_screenshot_16.png",
    "48": "../images/favicon_screenshot_48.png",
    "128": "../images/favicon_screenshot_128.png"
  }
}
