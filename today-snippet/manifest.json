{
  "manifest_version": 3,
  "name": "Today Snippet",
  "version": "0.3.0",
  "description": "Use a side panel library and an in-page command palette to insert frequently used snippets.",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "action": {
    "default_title": "Today Snippet"
  },
  "commands": {
    "toggle-palette": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Open snippet palette"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  }
}